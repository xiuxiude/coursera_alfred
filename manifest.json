{
  "name": "Coursera Alfred",
  "version": "0.2.8",
  "manifest_version": 2,
  "description": "Your Coursera Helper",
  "homepage_url": "http://www.xiuxiu.de/",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/bg.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Your Courses",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "alarms",
    "cookies",
    "notifications",
    "tabs",
    "geolocation",
    "https://www.coursera.org/*",
    "https://class.coursera.org/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://class.coursera.org/*/lecture/index"
      ],
      "js": [
        "bower_components/jquery/jquery.min.js", "src/inject/inject.js"
      ],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
